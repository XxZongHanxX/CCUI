  title 學籍資料登錄系統-密碼查詢 Password Query
  script(language='javascript').
    var mesg = "";
    function checkAllfields(field) {
    mesg = "";
    if (document.fm_askfor_passwd.std_id.value == '') {mesg += '請輸入您的"學號"Please enter your Student ID!\\n';}
    if (document.fm_askfor_passwd.personid.value == '') {mesg += '請輸入你的"身份證字號"Please enter your Identification number!\\n';}
    if (document.fm_askfor_passwd.birthday.value == '') {mesg += '請輸入你的"出生年月日Please enter your Date of Birth"!\\n';}
    if (mesg) {
    alert(mesg); return false;
